<table class="table table-condensed">
  <thead>
    <th>Title</th>
    <th>Developer</th>
  </thead>

<% for game in @games %>
  <tr>
    <td><%=h game.title %></td>
    <td><%=h game.developer %></td>
    <td><%= link_to 'Show', game, :class => 'btn btn-info btn-mini' %></td>
    <td><%= link_to 'Edit', edit_game_path(game), :class => 'btn btn-warning btn-mini' %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger btn-mini' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New game', new_game_path, :class => 'btn btn-inverse btn-mini' %>
